{
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Promise": true,
    "colors": true
  },
  "rules": {
    "no-param-reassign": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": [2, { "allow": ["_id", "_sails"] }],
    "prefer-destructuring": 0,
    "no-iterator": 1,
    "no-restricted-syntax": 1,
    "consistent-return": 1,
    "comma-dangle": 0,
    "guard-for-in": 0,
    "radix": 0,
    "object-shorthand": 1,
    "no-console": 0
  }
}
